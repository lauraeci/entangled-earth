<p id="notice"><%= notice %></p>

<h1>Accomplishments</h1>

<div class="accomplishments">
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>I Accomplished...</th>
      <th>On...</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accomplishments.each do |accomplishment| %>
      <tr>
        <td><%= image_tag accomplishment.totem.url(:thumb) %></td>
        <td><%= accomplishment.i_accomplished %></td>
        <td><%= accomplishment.on %></td>
        <td><%= link_to 'Show', accomplishment %></td>
        <td><%= link_to 'Edit', edit_accomplishment_path(accomplishment) %></td>
        <td><%= link_to 'Destroy', accomplishment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Accomplishment', new_accomplishment_path %>
