<%= form_for(game) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :level %>
    <%= f.text_field :level %>
  </div>

  <% if !game.new_record? %>
    <div class="field">
      <%= f.label :player1 %>
      <%= f.text_field :player1 %>
    </div>

    <div class="field">
      <%= f.label :player2 %>
      <%= f.text_field :player2 %>
    </div>
  <% end%>

  <div class="field">
    <%= f.label :objective_count %>
    <%= f.number_field :objective_count %>
  </div>

  <div class="field">
    <%= f.label :winner %>
    <%= f.text_field :winner %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
